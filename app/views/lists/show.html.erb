<div class="container">
  <div class="m-5">
    <h1 class="d-flex justify-content-center"><%= @list.name %></h1>
  </div>

  <div class="d-flex justify-content-between">
    <p><i class="fas fa-plus"></i> <%= link_to "Create a bookmark", new_list_bookmark_path(@list) %></p>
    <p><%= link_to "<< Go Back to Lists", lists_path() %></p>
  </div>

  <h3 class="h1 d-flex justify-content-center">Bookmarks</h3>

  <ul style="padding:0;">
  <div class="d-flex pt-5" style="height: fit-content;">
    <% @list.bookmarks.each do |bookmark| %>
        <div class="card has-bg-img mr-4 ml-4" style="height: 100%; width: 300px; display: flex; flex-direction: column;">
          <ul style="padding:0;">
            <li class="list-unstyled"><img class="bg-img" style="width:100%;" src="<%= bookmark.movie.poster_url %>" alt=""></li>
            <li class=" h3 card-title list-unstyled pt-4 pr-4 pl-4">Movie: <%= bookmark.movie.title  %></li>
          </ul>
          <li class="list-unstyled pr-4 pl-4">
            <b>Review:</b> <%= bookmark.comment %>
          </li>
          <div class="m-4" style="margin-top: auto;">
            <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Really?" }, class:"btn btn-danger w-100" %>
          </div>
        </div>
    <% end %>
  </div>
  </ul>
</div>
